<h1>ログイン</h1>
<%= link_to 'ユーザ登録はこちらから', "/signup" %>
<%= form_with model: @session, local: true do |form| %>
  <%= flash[:danger] %>
  
  <%= form.label :email, 'メールアドレス' %>
  <%= form.email_field :email %>

  <%= form.label :password, 'パスワード' %>
  <%= form.password_field :password %>

  <%= form.submit 'ログイン' %>

<% end %>